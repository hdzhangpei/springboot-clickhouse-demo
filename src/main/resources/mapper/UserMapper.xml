<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.clickhouse.demo.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.example.clickhouse.demo.po.UserPo">
        <id column="id" property="id" />
        <result column="name" property="name" />
<!--        <result column="ranks" property="ranks" typeHandler="com.example.clickhousedemo.dao.ClickArrayToIntHandler" />-->
    </resultMap>

    <sql id="Base_Column_List">
        *
    </sql>

    <select id="getUser" resultType="com.example.clickhouse.demo.po.UserPo">
        select
        <include refid="Base_Column_List" />
        from test_db.user
        where id = #{id}
        limit 1
    </select>

</mapper>